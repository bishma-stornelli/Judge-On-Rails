.post
    %h2.title Users
    .entry
        %table
            %tr
                %th Username
                %th Email
                %th Administrator
                %th
                %th
                %th

            - @users.each do |user|
                %tr
                    %td= user.username
                    %td= user.email
                    %td= check_box_tag "", user.admin, user.admin, disabled: true
                    %td= link_to 'Show', user
                    %td= link_to 'Edit', edit_user_path(user)
                    %td= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete
