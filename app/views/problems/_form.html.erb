<%= form_for(@problem, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :input_format %><br />
    <%= f.text_area :input_format %>
  </div>
  <div class="field">
    <%= f.label :output_format %><br />
    <%= f.text_area :output_format %>
  </div>
  <div class="field">
    <%= f.label :solution_file %><br />
    <%= f.file_field :solution_file %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
