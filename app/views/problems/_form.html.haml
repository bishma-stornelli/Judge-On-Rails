= form_for(@problem, :html => { :multipart => true }) do |f|
  = f.error_messages
  %table
    %tr
      %td= f.label :name
      %td= f.text_field :name
    %tr
      %td= f.label :description
      %td= f.text_area :description
    %tr
      %td= f.label :input_format
      %td= f.text_area :input_format
    %tr
      %td= f.label :output_format
      %td= f.text_area :output_format
    %tr
      %td= f.label :input
      %td= f.file_field :input
    %tr
      %td= f.label :solution
      %td= f.file_field :solution
    %tr
      %td
      %td= f.submit class: "submit"